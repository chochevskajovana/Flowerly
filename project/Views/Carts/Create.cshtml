@model project.Models.Cart

@{
    ViewBag.Title = "Create";
}

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="container m-auto  w-75 p-1">
    <h3 class="text-center mulberry-color">Are you sure you want to add @Html.DisplayFor(model => model.Name) to your cart?</h3>

    <div class="card mb-3">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.UserId)
        @Html.HiddenFor(model => model.Name)
        @Html.HiddenFor(model => model.PictureURL)
        @Html.HiddenFor(model => model.ShortDescription)
        @Html.HiddenFor(model => model.LongDescription)
        @Html.HiddenFor(model => model.Available)
        @Html.HiddenFor(model => model.Price)
        <div class="row g-0">
            <div class="col-md-4">
                <img class="card-img-top" src="@Html.DisplayFor(model => model.PictureURL)" alt="@Html.DisplayFor(model => model.Name)">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">@Html.DisplayFor(model => model.Name)</h5>
                    <p class="card-text">@Html.DisplayFor(model => model.LongDescription)</p>


                    <div class="row mt-3">
                        <div class="col me-2 d-flex justify-content-start">
                            @if (Model.Available)
                            {
                                <p class="badge alert-success me-2 pb-2 pt-2">Available</p>
                            }
                            else
                            {
                                <p class="badge alert-danger me-2 pb-2 pt-2">Not Available</p>
                            }
                            <p class="fw-bolder me-2">$ @Html.DisplayFor(model => model.Price)</p>
                        </div>

                        @if (Model.Available)
                        {
                            <div class="col text-end">
                                <input type="submit" value="Yes" class="btn btn-outline-danger" />
                                @Html.ActionLink("Back to List", "Index", new { Controller = "Plants" }, new { @class = "btn btn-outline-secondary" })
                            </div>
                        }
                        else
                        {
                            <div class="col text-end">
                                <span class="text-danger" style="font-size:small;">This flower is out of stock.</span>
                            </div>
                            <div class="col text-end">
                                @Html.ActionLink("Back to List", "Index", new { Controller = "Plants" }, new { @class = "btn btn-outline-secondary" })
                            </div>
                        }





                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
}

