    <!-- for Galery -->

    <style>
        body {
            font-family: 'Libre Baskerville', serif;
        }

        .jumbotron {
            padding: 2rem 1rem;
            margin-bottom: 2rem;
            background-repeat: no-repeat;
            background-size: cover;
            background: linear-gradient(rgba(91, 50, 86, 0.5),rgba(91, 50, 86, 0.5)), url( @Url.Content("~/Content/Images/tulips-cover-page.jpg") );
            
        }

        .jumbotron-fluid {
            padding-right: 0;
            padding-left: 0;
        }
        .back_fluid{
            color: black;
        }

        /* for Galery */
        section {
            padding: 50px 0;
        }

        .gallery-title {
            font-size: 30px;
            text-align: center;
            font-weight: 500;
            margin-bottom: 70px;
            color: rgb(91, 50, 86);
        }
