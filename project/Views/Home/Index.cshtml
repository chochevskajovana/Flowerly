            font-size: 30px;
            text-align: center;
            font-weight: 500;
            margin-bottom: 30px;
            color: rgb(91, 50, 86);
        }

        .filter-button {
            font-size: 18px;
            border: 2px solid #3F6184;
            padding: 5px 10px;
            text-align: center;
            margin-bottom: 30px;
            background: transparent;
        }
            .filter-button.active {
                background-color: rgb(216,191,216);
                border-color: rgb(216,191,216);
                color: rgb(91, 50, 86);
                outline: none;
            }

        .gallery_product {
            margin: 0px;
            padding: 0px;
            position: relative;
        }

            .gallery_product .img-info {
                position: absolute;
                background: rgba(0,0,0,0.5);
                left: 0;
                right: 0;
                bottom: 0;
                padding: 20px;
                overflow: hidden;
                color: #fff;
                top: 0;
                display: none;
                -webkit-transition: 2s;
                transition: 2s;
                
            }

            .gallery_product:hover .img-info {
                display: block;
                border-radius: 1.5%;
                -webkit-transition: 2s;
                transition: 2s;
            }

            .gallery_product:hover{
                padding:0;
                margin: 0;
            }

            .f-round {
                color: rgb(91, 50, 86);
                border-color: rgb(91, 50, 86);
                border-radius: 15%;
            }

            .f-round:hover {
                background-color: rgb(91, 50, 86);
                border-color: rgb(91, 50, 86);
                border-radius: 50%;
                color: white;
            }

            .img-info{
                
            }
        /*	for Galery */
    </style>
    <script>
    
        /*	gallery */
        $(document).ready(function () {

            $(".filter-button").click(function () {
                var value = $(this).attr('data-filter');

                if (value == "all") {
                    $('.filter').show('1000');
                }
                else {
                    $(".filter").not('.' + value).hide('3000');
                    $('.filter').filter('.' + value).show('3000');

                }

                if ($(".filter-button").removeClass("active")) {
                    $(this).removeClass("active");
                }
                $(this).addClass("active");
            });
        });

        $(document).ready(function () {
            $(".fancybox").fancybox({
                openEffect: "none",
                closeEffect: "none"
            });
        });
        /* gallery */
        $('.carousel').carousel({
            interval: 2000
        })

    </script>
</head>

