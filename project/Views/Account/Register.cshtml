@model project.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<div class="card p-4 w-25 mulberry-color m-auto">

    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
    <div class="text-center">
        <h3 class="m-0">@ViewBag.Title</h3>
        <h4>Create a new account.</h4>
    </div>
       
        <hr />
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label w-100" })
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })

        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label w-100" })
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })

        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label w-100" })
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
        </div>
        <div class="form-group pt-2">
            <input type="submit" class="btn btn-outline-danger p-1 px-2" value="Register" />
        </div>
    }
</div>
<br />    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
